<div class="tuile-container" data-controller="rotate" data-rotate-tuile-value="<%= tuile%>" data-rotate-attaque-value="<%= attaque %>">
    <% unless tuile == ["", "", ""] %>
        <div class="attaque <%= miror == "1" ? "attaque-toggle" : "" %>" data-rotate-target="attaque"><%= attaque %></div>
        <div class="rotate-btn" data-action="click->rotate#rotate"><i class="fa-solid fa-rotate"></i></div>
        <div class="miror-btn" data-action="click->rotate#miror"><i class="fa-solid fa-arrows-up-down"></i></div>
    <% end %>
    <!-- ligne 1 -->
    <div class="squares <%= miror == "1" ? "miror" : "" %>" data-rotate-target="tuile">
        <div class="square"></div><div class="square"></div><div class="square"></div>

        <div class="square <%= tuile.first %>-color1-top"></div><div class="square <%= tuile.second %>-color2-top"></div>

        <div class="square"></div><div class="square"></div><div class="square"></div>

        <!-- ligne 2 -->
        <div class="square"></div><div class="square"></div>

        <div class="square <%= tuile.first %>-color1-top"></div><div class="square <%= tuile.first %>-color1"></div>
        <div class="square <%= tuile.second %>-color2"></div><div class="square <%= tuile.second %>-color2-top"></div>

        <div class="square"></div><div class="square"></div>
        <!-- ligne 3 -->
        <div class="square"></div>

        <div class="square <%= tuile.first %>-color1-top"></div><div class="square <%= tuile.first %>-color1"></div>

        <div class="square"></div><div class="square"></div>	
        
        <div class="square <%= tuile.second %>-color2"></div><div class="square <%= tuile.second %>-color2-top"></div>

        <div class="square"></div>
        <!-- ligne 4 -->
        <div class="square <%= tuile.first %>-color1-top"></div>
        <div class="square <%= tuile.first %>-<%= tuile.last %>-left-corner"></div>
        <div class="square <%= tuile.last %>-color3"></div><div class="square <%= tuile.last %>-color3"></div>	<div class="square <%= tuile.last %>-color3"></div><div class="square <%= tuile.last %>-color3"></div>
        <div class="square <%= tuile.second %>-<%= tuile.last %>-right-corner"></div>
        <div class="square <%= tuile.second %>-color2-top"></div>
    </div>
</div>